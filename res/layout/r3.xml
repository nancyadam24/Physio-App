<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#56FFB8"
    android:backgroundTint="#56FFB8"
    android:foregroundTint="#56FFB8"
    android:outlineAmbientShadowColor="#56FFB8"
    tools:context=".activities.AddPatientActivity">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_200sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/r3" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_120sdp"
            android:layout_marginBottom="@dimen/_minus55sdp"
            app:cardCornerRadius="@dimen/_60sdp"
            app:cardElevation="@dimen/_20sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/some_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_horizontal|bottom"
                        android:lineHeight="@dimen/_30sdp"
                        android:text="Δήλωση Ασθενή"
                        android:textColor="#000000"
                        android:textFontWeight="800"
                        android:textSize="@dimen/_25sdp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/some_id" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/usernamer3"
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/custom_edittext"
                    android:backgroundTint="#F6F6F6"
                    android:fontFamily="sans-serif"
                    android:hint="Username"
                    android:padding="8dp"
                    android:drawablePadding="8dp"
                    android:textColorHint="@color/grey_text_hint" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/namer3"
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/custom_edittext"
                    android:backgroundTint="#F6F6F6"
                    android:fontFamily="sans-serif"
                    android:hint="Ονοματεπώνυμο"
                    android:padding="8dp"
                    android:drawablePadding="8dp"
                    android:inputType="text|textPersonName"
                    android:textColorHint="@color/grey_text_hint" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/amkar3"
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/custom_edittext"
                    android:backgroundTint="#F6F6F6"
                    android:fontFamily="sans-serif"
                    android:hint="ΑΜΚΑ"
                    android:padding="8dp"
                    android:drawablePadding="8dp"
                    android:inputType="number"
                    android:textColorHint="@color/grey_text_hint" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailr3"
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/custom_edittext"
                    android:backgroundTint="#F6F6F6"
                    android:fontFamily="sans-serif"
                    android:hint="E-mail"
                    android:padding="8dp"
                    android:drawablePadding="8dp"
                    android:inputType="text|textEmailAddress"
                    android:textColorHint="@color/grey_text_hint" />
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordr3"
                        android:layout_width="@dimen/_260sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/custom_edittext"
                        android:backgroundTint="#F6F6F6"
                        android:fontFamily="sans-serif"
                        android:hint=" Password"
                        android:inputType="text|textPassword"
                        android:textColorHint="@color/grey_text_hint" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addressr3"
                        android:layout_width="@dimen/_260sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/custom_edittext"
                        android:backgroundTint="#F6F6F6"
                        android:drawablePadding="8dp"
                        android:fontFamily="sans-serif"
                        android:hint="Διεύθυνση"
                        android:inputType="text|textEmailAddress"
                        android:padding="8dp"
                        android:textColorHint="@color/grey_text_hint" />

                    <Button
                    android:id="@+id/buttonr3"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:backgroundTint="#56FFB8"
                    android:fontFamily="sans-serif"
                    android:text="Αποθήκευση"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:cornerRadius="20dp" />




                </LinearLayout>
            </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
